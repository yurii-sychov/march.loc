<div class="offcanvas edit-user-details__offcanvas offcanvas-end" tabindex="-1" id="offcanvasEditUserDetails" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
        <h3 class="offcanvas-title" id="offcanvasRightLabel">
            <button type="button" data-bs-dismiss="offcanvas" aria-label="Close">{{ media.icon('arrow') }}</button>
            Back
        </h3>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <h1 class="mb-1">Edit Personal Information</h1>
        <form action="" class="offcanvas__edit-user-from">
            <div class="card bg-main-light border-0 p-4 mb-4 mt-4">
                <div class="row">
                    {% include '../../../components/form/form-field.twig' with {
                        id: "userEditOffcanvasFistName",
                        title: "First Name*",
                        name: "first_name",
                        class: "col col-6 js__component-of-form",
                        type: "text",
                        validateOnBlur: true,
                        isRequired: true,
                        defaultValue: "Adrian",
                        error: "Valid company name required",
                        placeholder: "",
                        fieldType: "text"
                    } %}
                    {% include '../../../components/form/form-field.twig' with {
                        id: "userEditOffcanvasLastName",
                        title: "Last Name*",
                        name: "last_name",
                        class: "col col-6 js__component-of-form",
                        type: "text",
                        validateOnBlur: true,
                        isRequired: true,
                        defaultValue: "Medina",
                        error: "Required field",
                        placeholder: "",
                        fieldType: "text"
                    } %}
                    {{
                        form.email({
                            id: "userEditOffcanvasEmail",
                            name: "email",
                            title: "Work Email*",
                            type: "email",
                            class: "col-12 js__component-of-form",
                            isRequired: true,
                            defaultValue: "adrian",
                            error: "Required field"
                        })
                    }}
                    <div class="col col-12">
                        {% include '../../../components/form/form-dropdown-select2.twig' with {
                            id: 'userEditOffcanvasRole',
                            class: 'col-12 js__component-of-form',
                            name: 'service_industry',
                            title: 'Role*',
                            hasSearch: false,
                            clearSelectionBtn: true,
                            isRequired: true,
                            placeholder: 'Select',
                            options: [
                                {
                                    title: 'Administrator',
                                    value: 'administrator',
                                },
                                {
                                    title: 'Assignee',
                                    value: 'assignee',
                                }
                            ],
                            error: 'Required field',
                        } %}
                    </div>
                    <div class="col col-6">
                        {% include '../../../components/form/form-iti-dropdown.twig' with {
                            id: "userEditOffcanvasPhone",
                            title: "Work Phone Number, Ext.*",
                            name: "phone",
                            defaultValue: "239-277-0087",
                            class: "col col-6 js__component-of-form",
                            isRequired: true,
                            error: "Valid company phone required",
                            placeholder: "000-000-0000"
                        } %}
                    </div>
                    <div class="col col-6"> 
                        {% include '../../../components/form/form-iti-dropdown.twig' with {
                            id: "userEditOffcanvasMobilenumber",
                            title: "Mobile Phone Number*",
                            name: "phone",
                            defaultValue: "415-315-5453",
                            class: "col col-6 js__component-of-form",
                            isRequired: true,
                            error: "Valid company phone required",
                            placeholder: "000-000-0000"
                        } %}
                    </div>
                    {% include '../../../components/form/form-field.twig' with {
                        id: "userEditOffcanvasEmployeeId",
                        title: "Employee ID",
                        name: "employee_id",
                        class: "col col-6 js__component-of-form",
                        defaultValue: "ABC1234568",
                        type: "text",
                        validateOnBlur: true,
                        isRequired: false,
                        error: "Required field",
                        placeholder: "",
                        fieldType: "text"
                    } %}
                    <div class="col col-6">
                        {% include '../../../components/form/form-dropdown-select2.twig' with {
                            id: 'userEditOffcanvasJobTitle',
                            class: 'js__select-to-custom-add-job-title js__component-of-form',
                            name: 'job_title',
                            title: 'Job Title*',
                            isRequired: true,
                            placeholder: 'Select',
                            editButton: 'Edit Options',
                            idModal: 'job-title',
                            backBtnReturn: '#offcanvasEditUserDetails',
                            options: [
                            {
                                title: 'Select',
                                value: '',
                            },
                            {
                                title: 'Attorney',
                                value: 'attorney',
                            },
                            {
                                title: 'Insurance Professional',
                                value: 'insurance_professional',
                            },
                            {
                                title: 'Medical Professional',
                                value: 'medical_professional',
                            },
                            {
                                title: 'Paralegal',
                                value: 'paralegal',
                            },
                            {
                                title: 'Partner',
                                value: 'partner',
                            }
                            ],
                            error: 'Required field',
                        } %}
                    </div>
                    {% include '../../../components/form/form-field.twig' with {
                        id: "userEditOffcanvasOfficeName",
                        title: "Office Name*",
                        name: "office_name",
                        class: "col col-12 js__component-of-form",
                        type: "text",
                        validateOnBlur: true,
                        isRequired: true,
                        error: "Required field",
                        placeholder: "",
                        fieldType: "text"
                    } %}
                </div>
            </div>
            <div class="d-flex justify-content-end">
                {{btn.primary({
                    inner: "Save",
                    class: "js-toast-btn js__edit-user-btn-submit"
                })}}
            </div>
        </form>
    </div>
</div>